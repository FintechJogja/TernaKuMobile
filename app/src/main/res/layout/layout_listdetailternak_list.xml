<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_btn_bg_color"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ecf0f1"
        android:id="@+id/relativeLayout3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp">


        <TextView
            android:id="@+id/txt_listdetailternak_activity_idternak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id Ternak"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/imageView7"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_alignParentTop="true"
            android:gravity="left|center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtIsKering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="TextView"
            android:gravity="center"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="normal|bold"
            android:textSize="10sp"
            android:layout_below="@+id/txtIsHeat"
            android:layout_alignParentStart="true"></TextView>

        <TextView
            android:id="@+id/txt_listdetailternak_activity_rfid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RFID"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_below="@+id/txt_listdetailternak_activity_idternak"
            android:layout_alignStart="@+id/txt_listdetailternak_activity_idternak" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUmur"
            android:textSize="12sp"
            android:gravity="top|center"
            android:layout_below="@+id/txt_listdetailternak_activity_rfid"
            android:layout_alignStart="@+id/txt_listdetailternak_activity_rfid"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_cow_red"
            android:id="@+id/img_listdetailternak_activity_kondisitubuh"
            android:layout_width="80dp"
            android:layout_below="@+id/txtUmur"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/txtIsKering" />

        <TextView
            android:id="@+id/txt_listdetailternak_activity_kondisitubuh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kondisi Tubuh"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="10sp"
            android:layout_below="@+id/img_listdetailternak_activity_kondisitubuh"
            android:layout_alignStart="@+id/txt_listdetailternak_activity_berat"
            android:layout_alignParentEnd="true"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtIsHeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="TextView"
            android:gravity="center"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:textSize="10sp"
            android:layout_below="@+id/txt_listdetailternak_activity_rfid"
            android:layout_alignParentStart="true"></TextView>

        <TextView
            android:id="@+id/txtIsMenyusui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"

            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="normal|bold"
            android:textSize="10sp"
            android:layout_below="@+id/txtIsKering"
            android:layout_alignParentStart="true"></TextView>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_listdetailternak_activity_berat"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_below="@+id/txtIsKering"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center" />


    </RelativeLayout>


</RelativeLayout>
